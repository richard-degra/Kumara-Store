<div class='item'>
    <div>Nome Completo</div>
    <div class='input'>
        <input
        type='text'
        name='name'
        placeholder='Digite o seu nome completo'
        value= '{{ user.name }}'\
        required
        >
    </div>
</div>

<div class='item'>
    <div>Email</div>
    <div class='input'>
        <input
        type='email'
        name='email'
        placeholder='Digite o seu email'
        value= '{{ user.email }}'
        onblur="validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class='item'>
    <div>Senha</div>
    <div class='input'>
        <input
        type='password'
        name='password'
        {% if not user.id %}
        placeholder='Crie uma senha segura'
        {% else %}
        placeholder='Digite sua nova senha'
        {% endif %}
        >
    </div>
</div>

{% if not user.id %}

<div class='item'>
    <div>Repetir Senha</div>
    <div>
        <input
        type='password'
        name='passwordRepeat'
        placeholder='Repita a senha escolhida'
        >
    </div>
</div>

{% endif %}

<div class='item'>
    <div>CPF ou CNPJ</div>
    <div class='input'>
        <input
        type='text'
        name='cpf_cnpj'
        placeholder='Digite seu documento'
        value= '{{ user.cpf_cnpj }}'
        onkeydown="mask.apply(this, 'cpfCnpj')"
        onblur="validate.apply(this, 'isCpfCnpj')"
        >
    </div>
</div>

<div class='item'>
    <div>CEP</div>
    <div class='input'>
        <input
        type='text'
        name='cep'
        placeholder='00000-000'
        value= '{{ user.cep }}'
        onkeydown="mask.apply(this, 'cep')"
        onblur="validate.apply(this, 'isCep')"
        >
    </div>
</div>

<div class='item'>
    <div>Endereço</div>
    <div class='input'>
        <input
        type='text'
        name='address'
        placeholder='Digite seu endereço'
        value= '{{ user.address }}'
        >
    </div>
</div>